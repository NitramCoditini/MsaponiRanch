<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountantStuff.SellItems">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <TextView
        android:id="@+id/RegTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sunnyregular"
        android:text="Sell Items"
        android:textColor="@color/dark_blue"
        android:textSize="36sp"
        android:gravity="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Current Budget"
            android:layout_marginEnd="10dp"
            android:textColor="@color/dark_blue"
            android:textSize="25sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/currentBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="30,000"
            android:textColor="@color/dark_blue"
            android:textSize="25sp"
            android:gravity="center" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Milk Size before selling"
                android:layout_marginEnd="10dp"
                android:textColor="@color/dark_blue"
                android:textSize="20sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/totalMilkSizeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/dark_blue"
                android:textSize="20sp"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Milk Size After selling"
                android:layout_marginEnd="10dp"
                android:textColor="@color/dark_blue"
                android:textSize="20sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/totalMilkSizeAfter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/dark_blue"
                android:textSize="20sp"
                android:gravity="center" />
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/InputText1"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/stItemName"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:background="@drawable/custom_edittext"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/iconsitem"
                android:drawablePadding="20dp"
                android:hint="Item name"
                android:inputType="textPersonName">

            </EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/InputText3"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/stItemWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/iconsweight"
                android:drawablePadding="20dp"
                android:inputType="text"
                android:background="@drawable/custom_edittext"
                android:fontFamily="@font/poppinsregular"
                android:hint="Quantity in KG/L"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/InputText13"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/datePickerIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:clickable="true"
                    android:contentDescription="Select Date"
                    android:focusable="true"
                    android:padding="20dp"
                    android:src="@drawable/baseline_calendar_month_24" />

                <EditText
                    android:id="@+id/dateEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:hint="Select Date sold"
                    android:inputType="none" />
            </LinearLayout>




        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/InputText20"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/stItemTotal"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:background="@drawable/custom_edittext"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/iconsmoneybag"
            android:drawablePadding="20dp"
            android:hint="Total price"
            android:inputType="number">

        </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <ProgressBar
            android:id="@+id/itemProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>


        <Button
            android:id="@+id/makePur"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/dark_blue"
            android:text="Add sold record"
            android:textSize="18sp"
            app:cornerRadius="20dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>